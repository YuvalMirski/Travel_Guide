<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".ui.home.HomePage">

    <TextView
        android:id="@+id/explore_home_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:text="Explore"
        android:textColor="#000066"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/homePage_spinner"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homepage_category_list"
        android:backgroundTint="#00a6ff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_home_tv" />

    <Button
        android:id="@+id/attractions_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/homepage_category_list"
        android:text="Attractions"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#CCDFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePage_spinner" />

    <Button
        android:id="@+id/tours_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/homepage_category_list"
        android:text="Tours"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#CCDFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attractions_home_btn" />


    <Button
        android:id="@+id/restaurants_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/homepage_category_list"
        android:text="restaurants"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#CCDFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tours_home_btn" />

    <Button
        android:id="@+id/museums_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/homepage_category_list"
        android:text="museums"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#CCDFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurants_home_btn" />

    <Button
        android:id="@+id/allCategories_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/homepage_category_list"
        android:text="All posts"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#CCDFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/museums_home_btn" />

    <ImageView
        android:id="@+id/homePg_dropDown_icon"
        android:layout_width="27dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="@+id/homePage_spinner"
        app:layout_constraintEnd_toEndOf="@+id/homePage_spinner"
        app:layout_constraintTop_toTopOf="@+id/homePage_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>