<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/logIn_nav">

    <fragment
        android:id="@+id/logIn_nav"
        android:name="com.example.travel_guide.view.Login.LogIn"
        android:label="Log In"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logIn_nav_to_signUp_nav"
            app:destination="@id/signUp_nav" />
    </fragment>
    <fragment
        android:id="@+id/signUp_nav"
        android:name="com.example.travel_guide.view.SignUp.SignUp"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" />

</navigation>