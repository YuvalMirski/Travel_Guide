<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/logIn_nav">

    <fragment
        android:id="@+id/homePage_nav"
        android:name="com.example.travel_guide.ui.home.HomePage"
        android:label="Home"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePage_nav_to_postListRvFragment"
            app:destination="@id/postListRvFragment" />
        <action
            android:id="@+id/action_homePage_nav_to_newPostPage"
            app:destination="@id/newPostPage" />
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/account_nav"
        android:name="com.example.travel_guide.ui.account.Account"
        android:label="Account"
        tools:layout="@layout/fragment_account" >
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/logIn_nav"
        android:name="com.example.travel_guide.ui.login.LogIn"
        android:label="Log In"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logIn_nav_to_homePage_nav"
            app:destination="@id/homePage_nav"
            app:popUpTo="@id/homePage_nav"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_logIn_nav_to_signUp_nav"
            app:destination="@id/signUp_nav" />
    </fragment>
    <fragment
        android:id="@+id/signUp_nav"
        android:name="com.example.travel_guide.ui.signUp.SignUp"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_nav_to_logIn_nav"
            app:destination="@id/logIn_nav"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/postListRvFragment"
        android:name="com.example.travel_guide.PostListRvFragment"
        android:label="All posts"
        tools:layout="@layout/fragment_post_list_rv">
        <action
            android:id="@+id/action_postListRvFragment_to_postPage"
            app:destination="@id/postPage" />
        <argument
            android:name="categoryName"
            app:argType="string" />
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/postPage"
        android:name="com.example.travel_guide.PostPage"
        android:label="Post"
        tools:layout="@layout/fragment_post_page">
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_postPage_to_editPostPage"
            app:destination="@id/editPostPage" />
    </fragment>
    <fragment
        android:id="@+id/editPostPage"
        android:name="com.example.travel_guide.EditPostPage"
        android:label="Edit Post"
        tools:layout="@layout/fragment_edit_post_page">
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_editPostPage_to_postListRvFragment"
            app:destination="@id/postListRvFragment"
            app:popUpTo="@id/postListRvFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/newPostPage"
        android:name="com.example.travel_guide.NewPostPage"
        android:label="Add post"
        tools:layout="@layout/fragment_new_post_page">
        <action
            android:id="@+id/action_newPostPage_to_postListRvFragment"
            app:destination="@id/postListRvFragment" />
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
    <action android:id="@+id/action_global_account_nav" app:destination="@id/account_nav" />
    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.example.travel_guide.EditUserPage"
        android:label="Edit account"
        tools:layout="@layout/fragment_edit_user">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment><action android:id="@+id/action_global_editUserFragment" app:destination="@id/editUserFragment"/><action android:id="@+id/action_global_postListRvFragment" app:destination="@id/postListRvFragment"/><action android:id="@+id/action_global_postPage" app:destination="@id/postPage"/>
</navigation>